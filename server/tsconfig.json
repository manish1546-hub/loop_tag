{
  "compilerOptions": {
    /* === Project Structure === */
    "rootDir": "./src",             // where your TypeScript source files live
    "outDir": "./dist",             // where compiled JS will go

    /* === Language Features === */
    "target": "ES2020",             // async/await & modern JS support
    "module": "CommonJS",           // Node-compatible modules
    "lib": ["ES2020"],              // standard library support
    "esModuleInterop": true,        // fixes default import issues with commonjs libs
    "allowSyntheticDefaultImports": true, // lets you use default imports safely
    "resolveJsonModule": true,      // allows importing JSON files

    /* === Strictness === */
    "strict": true,                 // enables all strict checks
    "noImplicitAny": true,          // requires explicit types
    "strictNullChecks": true,       // prevents null/undefined errors
    "forceConsistentCasingInFileNames": true,

    /* === Build Performance === */
    "skipLibCheck": true,           // skip checking .d.ts files for speed
    "noEmitOnError": false,         // still emit JS even if type errors
    "incremental": true,            // faster rebuilds

    /* === Source Maps & Debugging === */
    "sourceMap": true,              // for debugging with ts-node-dev or VSCode
    "declaration": true,            // generate .d.ts files for models/controllers
    "declarationMap": false,

    /* === Module Resolution === */
    "moduleResolution": "node",     // standard Node resolution
    "baseUrl": ".",                 // allows path aliases if you add them later
    // "paths": { "@/*": ["src/*"] } // optional: alias import paths
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
